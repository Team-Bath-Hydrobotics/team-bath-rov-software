{
  "input": {
    "host": "0.0.0.0",
    "port": 5000,
    "network_type": "udp"
  },
  "output": {
    "mqtt": {
      "client_id": "telemetry-processor",
      "base_topic": "hydrobotics/rov/<rov_id>/telemetry"
    }
  },
  "processing": {
    "filters": {
      "depth_sensor": [
        {
          "type": "kalman",
          "process_variance": 1e-5,
          "measurement_variance": 1e-2
        }
      ]
    },
    "high_freq_sensors": ["attitude", "angular_velocity", "linear_acceleration", "linear_velocity"],
    "aggregation": {
      "enabled": false,
      "window_ms": 1000
    }
  }
}
