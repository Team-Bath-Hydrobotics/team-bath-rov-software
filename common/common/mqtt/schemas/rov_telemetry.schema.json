{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "title": "ROV Telemetry Message",
  "version": "1.0.0",
  "type": "object",
  "properties": {
    "timestamp": { "type": "number" },
    "id": { "type": "string" },

    "attitude": {
      "type": "object",
      "properties": {
        "roll": {
          "type": "object",
          "properties": {
            "value": { "type": "number" },
            "unit": { "type": "string", "enum": ["deg"] }
          },
          "required": ["value", "unit"]
        },
        "pitch": {
          "type": "object",
          "properties": {
            "value": { "type": "number" },
            "unit": { "type": "string", "enum": ["deg"] }
          },
          "required": ["value", "unit"]
        },
        "yaw": {
          "type": "object",
          "properties": {
            "value": { "type": "number" },
            "unit": { "type": "string", "enum": ["deg"] }
          },
          "required": ["value", "unit"]
        }
      }
    },

    "angular_velocity": {
      "type": "object",
      "properties": {
        "x": {
          "type": "object",
          "properties": {
            "value": { "type": "number" },
            "unit": { "type": "string", "const": "rad/s" }
          },
          "required": ["value", "unit"]
        },
        "y": {
          "type": "object",
          "properties": {
            "value": { "type": "number" },
            "unit": { "type": "string", "const": "rad/s" }
          },
          "required": ["value", "unit"]
        },
        "z": {
          "type": "object",
          "properties": {
            "value": { "type": "number" },
            "unit": { "type": "string", "const": "rad/s" }
          },
          "required": ["value", "unit"]
        }
      }
    },

    "linear_acceleration": {
      "type": "object",
      "properties": {
        "x": {
          "type": "object",
          "properties": {
            "value": { "type": "number" },
            "unit": { "type": "string", "const": "m/s²" }
          },
          "required": ["value", "unit"]
        },
        "y": {
          "type": "object",
          "properties": {
            "value": { "type": "number" },
            "unit": { "type": "string", "const": "m/s²" }
          },
          "required": ["value", "unit"]
        },
        "z": {
          "type": "object",
          "properties": {
            "value": { "type": "number" },
            "unit": { "type": "string", "const": "m/s²" }
          },
          "required": ["value", "unit"]
        }
      }
    },

    "linear_velocity": {
      "type": "object",
      "properties": {
        "x": {
          "type": "object",
          "properties": {
            "value": { "type": "number" },
            "unit": { "type": "string", "const": "m/s" }
          },
          "required": ["value", "unit"]
        },
        "y": {
          "type": "object",
          "properties": {
            "value": { "type": "number" },
            "unit": { "type": "string", "const": "m/s" }
          },
          "required": ["value", "unit"]
        },
        "z": {
          "type": "object",
          "properties": {
            "value": { "type": "number" },
            "unit": { "type": "string", "const": "m/s" }
          },
          "required": ["value", "unit"]
        }
      }
    },
    "depth": {
      "type": "object",
      "properties": {
        "value": { "type": "number" },
        "unit": { "type": "string", "const": "m" }
      },
      "required": ["value", "unit"]
    },

    "ambient_temperature": {
      "type": "object",
      "properties": {
        "value": { "type": "number" },
        "unit": { "type": "string", "const": "C" }
      },
      "required": ["value", "unit"]
    },

    "internal_temperature": {
      "type": "object",
      "properties": {
        "value": { "type": "number" },
        "unit": { "type": "string", "const": "C" }
      },
      "required": ["value", "unit"]
    },

    "ambient_pressure": {
      "type": "object",
      "properties": {
        "value": { "type": "number" },
        "unit": { "type": "string", "const": "Pa" }
      },
      "required": ["value", "unit"]
    },

    "cardinal_direction": { "type": "string" },
    "grove_water_sensor": {
      "type": "object",
      "properties": {
        "value": { "type": "number" },
        "unit": { "type": "string", "const": "?" }
      },
      "required": ["value", "unit"]
    },

    "actuators": {
      "type": "object",
      "properties": {
        "a1": {
          "type": "object",
          "properties": {
            "value": { "type": "number" },
            "unit": { "type": "string", "const": "%" }
          },
          "required": ["value", "unit"]
        },
        "a2": {
          "type": "object",
          "properties": {
            "value": { "type": "number" },
            "unit": { "type": "string", "const": "%" }
          },
          "required": ["value", "unit"]
        },
        "a3": {
          "type": "object",
          "properties": {
            "value": { "type": "number" },
            "unit": { "type": "string", "const": "%" }
          },
          "required": ["value", "unit"]
        },
        "a4": {
          "type": "object",
          "properties": {
            "value": { "type": "number" },
            "unit": { "type": "string", "const": "%" }
          },
          "required": ["value", "unit"]
        },
        "a5": {
          "type": "object",
          "properties": {
            "value": { "type": "number" },
            "unit": { "type": "string", "const": "%" }
          },
          "required": ["value", "unit"]
        },
        "a6": {
          "type": "object",
          "properties": {
            "value": { "type": "number" },
            "unit": { "type": "string", "const": "%" }
          },
          "required": ["value", "unit"]
        }
      }
    }
  },
  "required": ["timestamp", "id"],
  "additionalProperties": false
}
